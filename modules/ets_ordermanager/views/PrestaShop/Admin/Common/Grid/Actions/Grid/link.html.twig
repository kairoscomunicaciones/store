{% import '@PrestaShop/Admin/macros.html.twig' as ps %}
{% if action.options.route== 'admin_orders_viewtrash'%}
    <a href="{{ets_odm_link_order_viewtrash}}" class="dropdown-item">
      {% if action.icon is not empty %}
        <i class="material-icons">{{ action.icon }}</i>
      {% endif %}
      {{ action.name }}
    </a>
    <a class="dropdown-item arrange_order_list" href="{{ets_odm_link_order_arrange}}">
        <i class="material-icons">storage</i>
        {{Customize_order_list_text}}
    </a>
    <a id="desc-order-export" class="dropdown-item" href="{{ets_odm_link_order_manager}}">
        <i class="icon-sign-out"></i>
        {{Export_orders_by_rule_text}}
    </a>
{% elseif action.options.route =='admin_customers_storage'%}
    <a class="dropdown-item arrange_customer_list" href="{{link_customer_manager}}">
        <i class="material-icons">storage</i>
        {{ets_tc_custom_column_text}}
    </a>
{% elseif action.options.route =='admin_custom_export_customers'%}
    <a class="dropdown-item arrange_export_customer_list" href="{{ets_expc_link_exportcustomer_manager}}">
        <i class="material-icons">cloud_download</i>
        {{ets_expc_custom_export_text}}
    </a>
{%else%}
    {% if pres8 %}
        {% include '@!PrestaShop/Admin/Common/Grid/Actions/Grid/link.html.twig ' %}
    {% else %}
        {% include 'PrestaShopBundle:Admin/Common/Grid/Actions/Grid:link.html.twig' %}
    {% endif %}
{%endif%}