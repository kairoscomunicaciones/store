{
    "name": "arengu/ps_arengu_auth",
    "description": "Connect Arengu to your PrestaShop installation",
    "authors": [
        {
            "name": "Arengu",
            "email": "support@arengu.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "firebase/php-jwt": "^5.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "PrestaShop\\Module\\Arengu\\Auth\\": "src/"
        }
    },
    "scripts": {
        "fix": "phpcbf --ignore=*/vendor/* --extensions=php .",
        "lint": "phpcs --ignore=*/vendor/* --extensions=php -s ."
    },
    "config": {
        "preferred-install": "dist",
        "prepend-autoloader": false
    },
    "type": "prestashop-module"
}
